{
  "name": "@distributedlab/web-kit",
  "author": "Distributed Lab",
  "license": "MIT",
  "private": true,
  "keywords": [
    "sdk",
    "distributed lab",
    "opensource"
  ],
  "description": "Front-end web kit for Distributed Lab projects",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/distributed-lab/web-kit.git"
  },
  "bugs": {
    "url": "https://github.com/distributed-lab/web-kit/issues"
  },
  "homepage": "https://github.com/distributed-lab/web-kit",
  "gitHooks": {
    "pre-commit": "yarn lint && lerna run type-check",
    "pre-push": "yarn test"
  },
  "scripts": {
    "lint": "eslint packages/* --ext .ts,.tsx --fix",
    "build": "lerna run build",
    "docs": "typedoc --options typedoc.json",
    "test": "jest --verbose true",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.1",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^26.0.21",
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "babel-plugin-root-import": "^6.6.0",
    "esbuild": "^0.15.9",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "lerna": "^5.1.8",
    "node-stdlib-browser": "^1.2.0",
    "prettier": "^2.7.1",
    "ts-jest": "^26.5.4",
    "tsc-alias": "^1.7.0",
    "typedoc": "^0.23.8",
    "typescript": "^4.8.3",
    "yorkie": "^2.0.0"
  }
}
